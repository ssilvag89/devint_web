<!-- reCAPTCHA v3 - Con detecci√≥n de entorno -->
<script define:vars={{ siteKey }}>
  // Detectar si estamos en producci√≥n
  const isProduction =
    window.location.hostname !== "localhost" &&
    window.location.hostname !== "127.0.0.1";

  // En producci√≥n usar la clave real, en desarrollo NO usar reCAPTCHA
  window.RECAPTCHA_SITE_KEY = isProduction ? siteKey : null;
  window.RECAPTCHA_ENABLED = isProduction;

  console.log(
    "üîß Site Key:",
    window.RECAPTCHA_SITE_KEY || "NINGUNA (desarrollo)"
  );
  console.log("üåç Entorno:", isProduction ? "PRODUCCI√ìN" : "DESARROLLO");
  console.log("üîê reCAPTCHA habilitado:", window.RECAPTCHA_ENABLED);

  // Cargar el script SOLO en producci√≥n
  if (
    window.RECAPTCHA_ENABLED &&
    !document.querySelector('script[src*="recaptcha/api.js"]')
  ) {
    console.log("üì¶ Cargando script de reCAPTCHA...");
    const script = document.createElement("script");
    script.src = `https://www.google.com/recaptcha/api.js?render=${window.RECAPTCHA_SITE_KEY}`;
    script.async = true;
    script.defer = true;
    script.onload = () => console.log("‚úÖ Script de reCAPTCHA cargado");
    script.onerror = () =>
      console.error("‚ùå Error al cargar script de reCAPTCHA");
    document.head.appendChild(script);
  } else {
    console.log(
      "‚ö†Ô∏è reCAPTCHA deshabilitado - Formspree usar√° Formshield + Honeypot"
    );
  }
</script>

<script>
  // Declaraciones de tipos para TypeScript
  declare global {
    interface Window {
      grecaptcha: {
        ready: (callback: () => void) => void;
        execute: (
          siteKey: string,
          options: { action: string }
        ) => Promise<string>;
      };
      RECAPTCHA_SITE_KEY: string;
      RECAPTCHA_ENABLED: boolean;
    }
  }

  // Manejo de env√≠o con reCAPTCHA v3 + Formspree
  const form = document.getElementById("contactForm") as HTMLFormElement | null;
  const msg = document.getElementById("formMsg") as HTMLElement | null;

  // Funci√≥n para esperar a que grecaptcha est√© disponible
  function waitForGrecaptcha(maxAttempts = 50): Promise<boolean> {
    return new Promise((resolve) => {
      let attempts = 0;
      console.log("‚è≥ Esperando a que grecaptcha est√© disponible...");
      const checkInterval = setInterval(() => {
        attempts++;
        console.log(
          `üîç Intento ${attempts}: grecaptcha =`,
          typeof window.grecaptcha
        );
        if (
          window.grecaptcha &&
          typeof window.grecaptcha.ready === "function"
        ) {
          clearInterval(checkInterval);
          console.log("‚úÖ grecaptcha cargado correctamente");
          resolve(true);
        } else if (attempts >= maxAttempts) {
          clearInterval(checkInterval);
          console.error(
            "‚ùå Timeout esperando grecaptcha despu√©s de",
            attempts,
            "intentos"
          );
          resolve(false);
        }
      }, 200); // Verificar cada 200ms (total: 10 segundos)
    });
  }

  async function getRecaptchaToken(): Promise<string> {
    // Si no est√° habilitado (desarrollo), retornar vac√≠o
    if (!window.RECAPTCHA_ENABLED) {
      console.log(
        "‚ö†Ô∏è reCAPTCHA deshabilitado en desarrollo - no se generar√° token"
      );
      return "";
    }

    // Esperar a que grecaptcha est√© disponible
    const isAvailable = await waitForGrecaptcha();
    if (!isAvailable) {
      console.error("‚ùå grecaptcha no se carg√≥ a tiempo");
      return "";
    }

    return new Promise((resolve) => {
      window.grecaptcha.ready(async () => {
        try {
          console.log(
            "üîë grecaptcha.ready() - Ejecutando con Site Key:",
            window.RECAPTCHA_SITE_KEY
          );
          const token = await window.grecaptcha.execute(
            window.RECAPTCHA_SITE_KEY,
            {
              action: "submit",
            }
          );
          console.log(
            "‚úÖ Token generado exitosamente:",
            token.substring(0, 30) + "..."
          );
          resolve(token);
        } catch (error) {
          console.error("‚ùå Error al ejecutar grecaptcha.execute():", error);
          resolve("");
        }
      });
    });
  }

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    console.log("üöÄ Formulario enviado");
    console.log("üìå Site Key:", window.RECAPTCHA_SITE_KEY);
    console.log("üìå grecaptcha disponible:", !!window.grecaptcha);

    // Honeypot
    const hp = form.querySelector(
      'input[name="company"]'
    ) as HTMLInputElement | null;
    if (hp && hp.value.trim()) {
      console.log("‚ùå Honeypot detectado - posible bot");
      if (msg)
        msg.textContent = "No pudimos enviar tu mensaje. Int√©ntalo nuevamente.";
      return;
    }

    const submitBtn = form.querySelector(
      'button[type="submit"]'
    ) as HTMLButtonElement | null;
    if (!submitBtn) return;

    const originalHTML = submitBtn.innerHTML;
    submitBtn.disabled = true;

    try {
      console.log("üîê Obteniendo token reCAPTCHA...");
      // Obtener token reCAPTCHA y setear en el hidden
      const token = await getRecaptchaToken();
      console.log(
        "‚úÖ Token obtenido:",
        token ? token.substring(0, 20) + "..." : "VAC√çO"
      );

      const tokenInput = form.querySelector(
        'input[name="g-recaptcha-response"]'
      ) as HTMLInputElement | null;
      if (tokenInput) tokenInput.value = token;

      console.log("üì§ Enviando a Formspree:", form.action);
      // Enviar a Formspree con respuesta JSON
      const formData = new FormData(form);
      const res = await fetch(form.action, {
        method: "POST",
        headers: { Accept: "application/json" },
        body: formData,
      });

      console.log("üì• Respuesta de Formspree:", res.status, res.statusText);

      if (res.ok) {
        console.log("‚úÖ Mensaje enviado exitosamente");
        submitBtn.innerHTML = `
          <span>¬°Mensaje Enviado!</span>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        `;
        submitBtn.classList.add("bg-green-500");
        if (msg)
          msg.textContent = "Gracias, te contactaremos dentro de 24 horas.";
        form.reset();
      } else {
        const errorData = await res.json();
        console.error("‚ùå Error de Formspree:", errorData);
        if (msg)
          msg.textContent =
            "No pudimos enviar tu mensaje. Int√©ntalo nuevamente.";
      }
    } catch (err) {
      console.error("‚ùå Error completo:", err);
      if (msg)
        msg.textContent = "Ocurri√≥ un error inesperado. Vuelve a intentar.";
    } finally {
      setTimeout(() => {
        if (submitBtn) {
          submitBtn.innerHTML = originalHTML;
          submitBtn.disabled = false;
          submitBtn.classList.remove("bg-green-500");
        }
      }, 3000);
    }
  });
</script>
