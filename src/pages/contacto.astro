            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<!-- Manejo del formulario con Formspree (Formshield + Honeypot) -->
<script>
  const form = document.getElementById("contactForm") as HTMLFormElement | null;
  const msg = document.getElementById("formMsg") as HTMLElement | null;

  // Validaci√≥n en tiempo real para bloquear caracteres inv√°lidos
  const nombreInput = document.getElementById(
    "nombre"
  ) as HTMLInputElement | null;
  const empresaInput = document.getElementById(
    "empresa"
  ) as HTMLInputElement | null;
  const telefonoInput = document.getElementById(
    "telefono"
  ) as HTMLInputElement | null;
  const mensajeInput = document.getElementById(
    "mensaje"
  ) as HTMLTextAreaElement | null;

  // Solo letras y espacios
  nombreInput?.addEventListener("input", (e) => {
    const target = e.target as HTMLInputElement;
    target.value = target.value.replace(/[^A-Za-z√Ä-√ø ]/g, "");
  });

  // Letras, n√∫meros, espacios, punto, guion y &
  empresaInput?.addEventListener("input", (e) => {
    const target = e.target as HTMLInputElement;
    target.value = target.value.replace(/[^A-Za-z0-9√Ä-√ø .\-&]/g, "");
  });

  // Solo n√∫meros, +, -, espacios y par√©ntesis
  telefonoInput?.addEventListener("input", (e) => {
    const target = e.target as HTMLInputElement;
    target.value = target.value.replace(/[^0-9+ \-()]/g, "");
  });

  // Letras, n√∫meros, espacios y puntuaci√≥n b√°sica
  mensajeInput?.addEventListener("input", (e) => {
    const target = e.target as HTMLTextAreaElement;
    target.value = target.value.replace(/[^A-Za-z0-9√Ä-√ø .,;:?¬ø!¬°\-_()]/g, "");
  });

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    // Verificar honeypot (anti-bot)
    const hp = form.querySelector(
      'input[name="company"]'
    ) as HTMLInputElement | null;
    if (hp && hp.value.trim()) {
      if (msg)
        msg.textContent = "No pudimos enviar tu mensaje. Int√©ntalo nuevamente.";
      return;
    }

    const submitBtn = form.querySelector(
      'button[type="submit"]'
    ) as HTMLButtonElement | null;
    if (!submitBtn) return;

    const originalHTML = submitBtn.innerHTML;
    submitBtn.disabled = true;

    // Animaci√≥n de carga m√°s visual
    submitBtn.innerHTML = `
      <span class="flex items-center justify-center space-x-2">
        <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span>Enviando...</span>
      </span>
    `;

    // Mostrar mensaje optimista inmediatamente
    if (msg) {
      msg.textContent = "üì§ Procesando tu mensaje...";
      msg.classList.add("text-cyan-400");
    }

    try {
      const startTime = performance.now();

      // Enviar a Formspree (sin timeout, dejar que tome el tiempo necesario)
      const formData = new FormData(form);
      const res = await fetch(form.action, {
        method: "POST",
        headers: { Accept: "application/json" },
        body: formData,
      });

      const duration = ((performance.now() - startTime) / 1000).toFixed(1);

      if (res.ok) {
        submitBtn.innerHTML = `
          <span class="flex items-center justify-center space-x-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>¬°Mensaje Enviado!</span>
          </span>
        `;
        submitBtn.classList.add("bg-green-500");

        if (msg) {
          msg.textContent = `‚úÖ Gracias! Te contactaremos dentro de 24 horas.`;
          msg.classList.remove("text-cyan-400");
          msg.classList.add("text-green-400");
        }

        form.reset();
      } else {
        const errorData = await res.json();
        console.error("‚ùå Error de Formspree:", errorData);
        console.error(
          "‚ùå Detalles de errores:",
          JSON.stringify(errorData, null, 2)
        );

        if (msg) {
          // Mostrar errores espec√≠ficos si est√°n disponibles
          if (errorData.errors && Array.isArray(errorData.errors)) {
            const errorMessages = errorData.errors
              .map((err: any) => `${err.field}: ${err.message}`)
              .join(", ");
            msg.textContent = `‚ùå Error: ${errorMessages}`;
          } else {
            msg.textContent =
              "‚ùå No pudimos enviar tu mensaje. Int√©ntalo nuevamente.";
          }
          msg.classList.remove("text-cyan-400");
          msg.classList.add("text-red-400");
        }
      }
    } catch (err: any) {
      console.error("‚ùå Error:", err);

      if (msg) {
        msg.textContent =
          "‚ùå Error de conexi√≥n. Por favor, intenta nuevamente.";
        msg.classList.remove("text-cyan-400");
        msg.classList.add("text-red-400");
      }
    } finally {
      setTimeout(() => {
        if (submitBtn) {
          submitBtn.innerHTML = originalHTML;
          submitBtn.disabled = false;
          submitBtn.classList.remove("bg-green-500");
        }
        if (msg) {
          msg.classList.remove(
            "text-cyan-400",
            "text-green-400",
            "text-red-400"
          );
        }
      }, 5000);
    }
  });
</script>
