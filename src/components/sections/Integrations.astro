<section class="py-20 relative">
  <div class="container mx-auto px-6">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      
      <!-- Image Section -->
      <div class="relative">
        <div class="bg-gradient-to-br from-emerald-500 to-cyan-500 rounded-3xl p-1">
          <div class="bg-slate-900 rounded-3xl p-8 h-full">
            <img src="/images/digital-communication-technology-background-with-hand-touching-virtual-screen-digital-remix.jpg" 
                 alt="Digital Communication Technology" 
                 class="w-full h-80 object-cover rounded-2xl" />
          </div>
        </div>
      </div>

      <!-- Content -->
      <div class="space-y-8">
        <div>
          <h2 class="text-4xl lg:text-5xl font-bold text-white mb-6">
            INTEGRACIONES
          </h2>
          <p class="text-lg text-slate-300 leading-relaxed mb-8">
            Integramos Tus Plataformas Con APIs REST y SOAP, Mejorando la Conectividad y Optimizando la Operación de Tu Negocio.
          </p>
        </div>

        <!-- Integration Types -->
        <div class="flex flex-wrap gap-4">
          <div class="bg-slate-800/50 backdrop-blur-sm border border-emerald-500 rounded-full px-6 py-3">
            <span class="text-emerald-400 font-medium">Api Soap</span>
          </div>
          <div class="bg-slate-800/50 backdrop-blur-sm border border-emerald-500 rounded-full px-6 py-3">
            <span class="text-emerald-400 font-medium">Api Rest</span>
          </div>
        </div>

        <!-- CTA Button -->
        <div class="pt-4">
          <a href="/servicios" class="inline-flex items-center space-x-2 bg-gradient-to-r from-emerald-500 to-cyan-500 text-white px-8 py-4 rounded-full font-semibold hover:from-emerald-600 hover:to-cyan-600 transition-all duration-300 shadow-lg hover:shadow-emerald-500/25">
            <span>Conocer Más</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>